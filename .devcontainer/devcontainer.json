{
	"name": "Java",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "17-bullseye",
			"INSTALL_MAVEN": "true",
			"INSTALL_GRADLE": "false",
			"NODE_VERSION": "lts/*"
		}
	},
	"containerEnv": {
		"JAVA_HOME": "/usr/lib/jvm/msopenjdk-current"
	},
	"features": {
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		}
	},
	"hostRequirements": {
		"cpus": 4,
		"memory": "8gb",
		"storage": "32gb" 
	},

	"customizations": {
		"vscode": {
			"settings": { 
			},
			
			"extensions": [
				"vscjava.vscode-java-pack"
			]
		}
	},

	"postAttachCommand": "./core/develop.sh &",

	"remoteUser": "root"

}
